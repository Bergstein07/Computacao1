#include<stdio.h>
int main(){

    float hora, min, seg;

    printf("Digite hora, minuto e segundos: ");
    scanf("%f %f %f", &hora, &min, &seg);

if(hora>1 && min>15){

    printf("Quantidade de Segundos %.0f\n", hora*3600 + min*60 + seg);

}

    else{

    printf("Quantidade de Minutos: %.2f\n", min);

}
    return 0;
    }
